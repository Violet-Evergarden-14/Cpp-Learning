{
    "configurations": [
        // 多文件调试：通用版，匹配当前目录的main.exe
        {
            "name": "C/C++: g++.exe 调试多文件程序（通用版）",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}\\main.exe", // 调试当前目录的main.exe
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}", // 调试工作目录=当前文件目录
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "D:\\msys\\mingw64\\bin\\gdb.exe",
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "将反汇编风格设置为 Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: g++.exe 多文件编译（通用版）" // 匹配tasks的label
        },
        // 单文件调试：通用版，无需修改
        {
            "name": "C/C++: g++.exe 调试单文件程序（通用版）",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}\\${fileBasenameNoExtension}.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "D:\\msys\\mingw64\\bin\\gdb.exe",
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "将反汇编风格设置为 Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: g++.exe 单文件编译（通用版）"
        }
    ],
    "version": "2.0.0"
}