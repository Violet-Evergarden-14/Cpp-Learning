{
    "tasks": [
        {
            "label": "C/C++: g++.exe 多文件编译（通用版）",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "g++ -fdiagnostics-color=always -g (Get-ChildItem '${fileDirname}/*.cpp' -Name) -o '${fileDirname}/main.exe' -I '${fileDirname}'"
            ],
            "options": {
                "cwd": "${fileDirname}",
                "shell": {
                    "executable": "powershell.exe",
                    "args": [
                        "-NoProfile",
                        "-ExecutionPolicy",
                        "Bypass"
                    ]
                }
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "多文件编译：通用版，自适应任意目录，兼容特殊字符路径"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe 单文件编译（通用版）",
            "command": "D:\\msys\\mingw64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "单文件编译：通用版，编译当前打开的文件"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe 生成活动文件",
            "command": "D:\\msys\\mingw64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}